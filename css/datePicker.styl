@import './variables'

/*******************************
          Date Picker
*******************************/
table.date.picker {
  margin: 0;
  border-collapse: separate;
  border-spacing: 10px;
  table-layout: fixed;

  th {
    font-weight: 100;
  }

  td:first-child {
    background-color: transparent;
    width: 10px;
    font-weight: 100;
  }

  td {
    width: 46px; height: 46px;
    border-radius: .3rem;
    background-color: $colors.tertiary;
  }

  td.selected {
    background-color: $colors.primary;
  }
}

table.result.date.picker {
  margin: 0 auto;

  tr:first-child, td:first-child {
    display: none;
  }

  td {
    width: 30px; height: 30px;
  }
}
