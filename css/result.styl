/*******************************
            Geral
*******************************/
#resultScreen {
  /*--------------------
          Headers
  ---------------------*/
  h1.ui.header {
    padding: 0 20px;
  }

  span.sub.header {
    margin-top: 5px;
  }

  /*--------------------
          Labels
  ---------------------*/

  .ui.labels {
    margin: 0 auto;
    display: table;
    margin-top: 30px;
  }

  /*--------------------
       Result List
  ---------------------*/
  .row {
    display: flex;
    orientation: horizontal;
    overflow-y: visible;
    width: 100%;

    margin-top: 70px;
  }

  .wrapper {
    overflow-x: scroll;
  }
}

/*******************************
          Date Picker
*******************************/
table.result.date.picker {
  tr:first-child, td:first-child {
    display: none;
  }

  td {
    width: 30px; height: 30px;
  }
}
