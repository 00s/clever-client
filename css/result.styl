@import "./variables.styl"

#resultScreen {

  display: none;

  /*--------------------
          Headers
  ---------------------*/
  h1.ui.header {
    padding: 0 20px;
  }

  span.sub.header {
    margin-top: 5px;
  }

  /*--------------------
          Labels
  ---------------------*/

  .ui.labels {
    margin: 0 auto;
    display: table;
    margin-top: 30px;
  }

  /*--------------------
       Result List
  ---------------------*/
  .row {
    display: flex;
    orientation: horizontal;
    overflow-y: visible;

    margin-top: 70px;
  }

  .wrapper {
    overflow-x: scroll;
    width: 100%;
  }
}

@media(min-width: $laptop.breakpoint){
  #resultScreen {
    display: block;
    margin-left: 360px;

    h1.ui.header, span.sub.header,
    .ui.labels, table.date.picker {
      display: none;
    }

    .wrapper {
      overflow: hidden;
      margin: 0 auto;
      padding-top: 40px;

      .row {
        flex-wrap: wrap;

        margin-top: 0px;
      }
    }
  }
}
