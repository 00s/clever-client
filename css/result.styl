/*******************************
            Geral
*******************************/
#resultScreen {
  /*--------------------
          Headers
  ---------------------*/
  h1.ui.header {
    padding: 0 20px;
  }

  span.sub.header {
    margin-top: 5px;
  }

  /*--------------------
          Labels
  ---------------------*/

  .ui.labels {
    margin: 0 auto;
    display: table;
    margin-top: 30px;
  }

  /*--------------------
       Result List
  ---------------------*/
  .row {
    display: flex;
    overflow: scroll;
    width: 100%;
  }
}

/*******************************
            Cards
*******************************/
#resultScreen .card {
  height: 370px;
  min-width: 264px;
  max-width: 264px;

  margin: 15px 5px;
  border-radius: 0;

  .header {
    margin-top: 15px;
    text-align: center;
  }

  .meta {
    text-align: center;
  }

  p {
    margin-top: 10px;
    text-align: justify;
  }
}

/*******************************
          Date Picker
*******************************/
table.result.date.picker {
  tr:first-child, td:first-child {
    display: none;
  }

  td {
    width: 30px; height: 30px;
  }
}
